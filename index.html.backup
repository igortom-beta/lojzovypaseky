<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lojzovy Paseky - Rezervace</title>
    <style>
        body { font-family: sans-serif; margin: 0; background: #f4f7f6; color: #1a3a5f; text-align: center; }
        .hero { background: #1a3a5f; color: white; padding: 50px 20px; }
        .btn { background: #28a745; color: white; padding: 15px 30px; text-decoration: none; border-radius: 5px; font-weight: bold; display: inline-block; margin-top: 20px; font-size: 20px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); }
        .container { max-width: 800px; margin: auto; padding: 40px; background: white; border-radius: 10px; margin-top: -30px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="hero">
        <h1>Lojzovy Paseky</h1>
        <p>Bungalovy u Lipna & Investiƒçn√≠ p≈ô√≠le≈æitosti</p>
    </div>
    <div class="container">
        <h2>Rezervace ubytov√°n√≠</h2>
        <p>V√≠tejte! N√°≈° AI asistent vpravo dole v√°m spoƒç√≠t√° cenu v Kƒç i EUR.</p>
        <a href="mailto:info@lojzovypaseky.life" class="btn">REZERVOVAT TEƒé</a>
    </div>

    <div id="ai-chat-root"></div>

    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <script type="text/babel">
      const Chat = () => {
        const [msg, setMsg] = React.useState([{ t: 'Dobr√Ω den! üëã Jsem AI asistent. Spoƒç√≠t√°m v√°m cenu v CZK i EUR. (Mluv√≠m CZ, DE, HR, IT)', s: 'ai' }]);
        const [val, setVal] = React.useState('');
        const [rate, setRate] = React.useState(25.30);

        // Naƒçten√≠ re√°ln√©ho kurzu z ƒåNB
        React.useEffect(() => {
          fetch('https://api.allorigins.win/get?url=' + encodeURIComponent('https://www.cnb.cz/cs/financni-trhy/devizovy-trh/kurzy-devizoveho-trhu/kurzy-devizoveho-trhu/denni_kurz.txt'))
            .then(r => r.json()).then(d => {
              const line = d.contents.split('\n').find(x => x.includes('|EUR|'));
              if(line) setRate(parseFloat(line.split('|')[4].replace(',', '.')));
            });
        }, []);

        const send = (e) => {
          e.preventDefault(); if(!val) return;
          const text = val.toLowerCase();
          setMsg([...msg, { t: val, s: 'u' }]);
          
          setTimeout(() => {
            const cenaCzk = 24000;
            const cenaEur = Math.round(cenaCzk / rate);
            
            let reply = `N√°jem je ${cenaCzk.toLocaleString()} Kƒç (cca ${cenaEur} EUR dle ƒåNB). P≈ôejete si prov√©st rezervaci?`;
            
            if(text.match(/bok|dobar/)) reply = `Najam je ${cenaEur} ‚Ç¨ mjeseƒçno. Rezervirajte klikom na zeleni gumb!`;
            if(text.match(/ciao|buon/)) reply = `L'affitto √® di ${cenaEur} ‚Ç¨ al mese. Prenota ora!`;
            
            setMsg(p => [...p, { t: reply, s: 'ai' }]);
          }, 600);
          setVal('');
        };

        return (
          <div style={{position:'fixed', bottom:'20px', right:'20px', width:'300px', height:'420px', background:'white', border:'3px solid #1a3a5f', borderRadius:'15px', display:'flex', flexDirection:'column', boxShadow:'0 10px 25px rgba(0,0,0,0.3)', zIndex:9999, fontFamily:'sans-serif'}}>
            <div style={{background:'#1a3a5f', color:'white', padding:'12px', textAlign:'center', fontWeight:'bold', borderTopLeftRadius:'10px', borderTopRightRadius:'10px'}}>Lojzovky AI Asistent</div>
            <div style={{flex:1, overflowY:'auto', padding:'10px', background:'#f8f9fa', textAlign:'left'}}>
              {msg.map((m,i) => (
                <div key={i} style={{alignSelf: m.s==='u'?'flex-end':'flex-start', background:m.s==='u'?'#1a3a5f':'#e9ecef', color:m.s==='u'?'white':'black', padding:'8px 12px', borderRadius:'10px', marginBottom:'8px', fontSize:'13px', maxWidth:'85%', marginLeft: m.s==='u'?'auto':'0'}}>
                  {m.t}
                </div>
              ))}
            </div>
            <form onSubmit={send} style={{padding:'10px', borderTop:'1px solid #ddd', display:'flex'}}>
              <input style={{flex:1, padding:'8px', borderRadius:'15px', border:'1px solid #ccc', outline:'none'}} value={val} onChange={e=>setVal(e.target.value)} placeholder="Napi≈°te n√°m..." />
            </form>
          </div>
        );
      };
      ReactDOM.createRoot(document.getElementById('ai-chat-root')).render(<Chat />);
    </script>
</body>
</html>
