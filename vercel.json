{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "framework": "vite",

  "functions": {
    "server/**/*.ts": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/trpc/(.*)",
      "dest": "/server/_core/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
